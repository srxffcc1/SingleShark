<resources>

    <!-- Base application theme. -->
    <style name="FrameAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

    </style>
    <style name="FrameAppTheme.Navigation">
        <item name="android:textColorSecondary">@android:color/white</item>
        <!--overflow颜色-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--标题颜色-->
        <item name="colorPrimary">#2196F3</item>
        <!--标题背景-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FrameAppTheme.NoActionBar">
        <item name="android:textColorSecondary">@android:color/white</item>
        <!--overflow颜色-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--标题颜色-->
        <item name="colorPrimary">#2196F3</item>
        <!--标题背景-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FrameAppTheme.NoActionBarNoSoftInput">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
    </style>
    <style name="FrameAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="FrameAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
