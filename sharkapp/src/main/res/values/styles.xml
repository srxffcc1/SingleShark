<resources>

    <!-- Base application theme. -->
    <style name="SharkAppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#2378BB</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="SharkAppTheme" parent="SharkAppBaseTheme">
        <item name="android:listDivider">@drawable/divider_bg</item>
        <item name="android:windowBackground">@color/bcwhite</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>



    <style name="FirstActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <style name="RedButton" parent="RecordAppTheme">
        <item name="buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="colorButtonNormal">@color/color_d81e06</item>
    </style>

    <style name="BlueButton" parent="RecordAppTheme">
        <item name="buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="colorButtonNormal">@color/dodgerblue</item>
    </style>

    <style name="YellowButton" parent="RecordAppTheme">
        <item name="buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="colorButtonNormal">@color/yellow</item>
    </style>
</resources>
