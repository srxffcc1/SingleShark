<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6095FF"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.businessframehelp.widget.AutoCheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/eyeopen"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="14"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="计划"></TextView>

                <com.businessframehelp.widget.AutoCheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/swopen" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="折叠菜单比如添加编辑和一些其他功能由下拉控制显示" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="计划内容展示由眼睛控制显示" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6095FF"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="检查方案"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="检查方案内容展示" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6095FF"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="现场检查记录"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="现场检查记录内容展示" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.businessframehelp.widget.ViewPagerForScrollView
                            android:id="@+id/vp_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></com.businessframehelp.widget.ViewPagerForScrollView>

                        <com.flyco.tablayout.SegmentTabLayout
                            android:id="@+id/tl_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:paddingTop="5dp"
                            tl:tl_bar_color="#ffffff"
                            tl:tl_indicator_anim_enable="true"
                            tl:tl_indicator_color="#F6CE59"
                            tl:tl_indicator_corner_radius="2dp"
                            tl:tl_textBold="SELECT" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:padding="3dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text="隐患简要描述" />

                                <RadioGroup
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:checkedButton="@+id/ss1"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:padding="2dp"
                                        android:layout_margin="2dp"
                                        android:id="@+id/ss1"
                                        android:enabled="false"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/radiobuttoncolor"
                                        android:button="@null"
                                        android:clickable="true"
                                        android:gravity="center"
                                        android:text="转入责令"
                                        android:textColor="@drawable/text_color_selector" />

                                    <RadioButton
                                        android:padding="2dp"
                                        android:enabled="false"
                                        android:layout_margin="2dp"
                                        android:id="@+id/ss2"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/radiobuttoncolor"
                                        android:button="@null"
                                        android:clickable="true"
                                        android:gravity="center"
                                        android:text="转入现场"
                                        android:textColor="@drawable/text_color_selector" />
                                </RadioGroup>
                            </LinearLayout>
                            <LinearLayout
                                android:padding="3dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text="隐患简要描述" />

                                <RadioGroup
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:checkedButton="@+id/ss11"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:layout_margin="2dp"
                                        android:padding="2dp"
                                        android:id="@+id/ss11"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/radiobuttoncolor"
                                        android:button="@null"
                                        android:clickable="true"
                                        android:gravity="center"
                                        android:text="转入责令"
                                        android:textColor="@drawable/text_color_selector" />

                                    <RadioButton
                                        android:layout_margin="2dp"
                                        android:padding="2dp"
                                        android:id="@+id/ss21"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/radiobuttoncolor"
                                        android:button="@null"
                                        android:clickable="true"
                                        android:gravity="center"
                                        android:text="转入现场"
                                        android:textColor="@drawable/text_color_selector" />
                                </RadioGroup>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6095FF"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="现场处理措施、责令整改"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="折叠菜单比如撤回操作" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="现场措施内容展示" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6095FF"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="整改复查"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="整改复查内容展示" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>