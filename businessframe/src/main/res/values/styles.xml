<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="FrameAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>
    <style name="FrameAppTheme.Navigation">
        <item name="android:textColorSecondary">@android:color/white</item>
        <!--overflow颜色-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--标题颜色-->
        <item name="colorPrimary">#2378BB</item>
        <!--标题背景-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FrameAppTheme.NoActionBar">
        <item name="android:textColorSecondary">@android:color/white</item>
        <!--overflow颜色-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--标题颜色-->
        <item name="colorPrimary">#2378BB</item>
        <!--标题背景-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FrameAppTheme.NoActionBarNoSoftInput">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowSoftInputMode" tools:targetApi="cupcake">stateHidden</item>
    </style>
    <style name="FrameAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="FrameAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AutoCompleteStyle" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:popupBackground">@drawable/netencyclopedia_completeitems_bg</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
    </style>
    <!--溢出[弹出]菜单样式 parent相当于继承【可以不要parent】-->
    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <!-- 弹出层背景颜色 -->
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">5dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <!-- 设置弹出菜单文字颜色 -->
    </style>
</resources>
